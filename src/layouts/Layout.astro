---
import '../styles/global.css';
import { Image } from 'astro:assets';
import whaleIcon from '../assets/whale.svg';

export interface Props {
  title?: string;
  description?: string;
}

const { 
  title = 'Whale Encyclopedia', 
  description = 'A comprehensive guide to whale species' 
} = Astro.props;
---

<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>{title}</title>
  <meta name="description" content={description} />
</head>
<body class="min-h-screen flex flex-col">
  <header class="bg-nav text-white p-4 md:p-6">
    <div class="container mx-auto">
      <div class="text-center">
        <div class="flex items-center justify-center gap-4 mb-2">
          <a href="/">
            <Image src={whaleIcon} alt="Whale Icon" class="w-12 h-12 md:w-16 md:h-16" width={64} height={64} />
          </a>
          <h1 class="text-2xl md:text-4xl font-bold">Whale Encyclopedia</h1>
        </div>
        <p class="text-blue-100">Discover the magnificent cetaceans of our oceans</p>
      </div>
    </div>
  </header>

  <main class="container mx-auto p-4 md:p-6 flex-grow">
    <slot />
  </main>

  <footer class="bg-nav text-white p-4 mt-auto">
    <div class="container mx-auto text-center">
      <p>&copy; {new Date().getFullYear()} Whale Encyclopedia</p>
      <p class="text-sm text-blue-200 mt-1">Data compiled from scientific research and conservation organizations</p>
      <div class="mt-3 flex flex-col md:flex-row justify-center items-center gap-3">
        <p class="text-sm text-blue-100"><a href="https://vicusbass.com" target="_blank" rel="noopener">Made by Vic and Andrei Pop</a></p>
        <a href="https://coff.ee/vicusbass" target="_blank" rel="noopener" class="flex items-center gap-2 bg-accent text-white hover:text-gray-900 px-3 py-1 rounded-md text-sm transition-colors">
          <span class="icon-[tabler--coffee] w-4 h-4"></span>
          Buy me a coffee
        </a>
      </div>
    </div>
  </footer>
</body>
</html>

<script is:inline src="../node_modules/flyonui/dist/accordion.js"></script> 